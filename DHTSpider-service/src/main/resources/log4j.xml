<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="LOG.Console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%c] %-5p: %m%n " />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
			<param name="LevelMax" value="ERROR" />
		</filter>
	</appender>

	<appender name="LOG.ticketplatform" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="BufferedIO" value="false" />
		<param name="BufferSize" value="10240" />
		<param name="file" value="/logs/dhtspider/log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d] [%-5p] %c{2} - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
			<param name="LevelMax" value="ERROR" />
		</filter>
	</appender>
	
	<root>
		<appender-ref ref="LOG.Console" /><!-- 生产时关掉 -->
		<!--<appender-ref ref="LOG.ticketplatform" />-->
	</root>
	

</log4j:configuration>
